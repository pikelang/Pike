#! /bin/sh

# .zap_real_crypto

echo "Do you really want to delete all cryptography source files?"
read answer
case $answer in
    y*|Y*)
	rm -rf src/modules/_Crypto
	rm -f lib/modules/Crypto/_rsa.pike
	rm -f lib/modules/Crypto/aes.pike
	rm -f lib/modules/Crypto/des3.pike
	rm -f lib/modules/Crypto/des3_cbc.pike
	rm -f lib/modules/Crypto/idea_cbc.pike
	rm -f lib/modules/Crypto/rsa.pike
	echo "Done. Make sure there are no backup or autosavefiles left,"
	echo "for example lib/modules/rsa.pike~."
	;;
    *)
	echo "No harm done."
	;;
esac
