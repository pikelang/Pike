  void my_write()
  {
    if(!sizeof(out))
      return;
    client_con->write(out->read(1));
    my_write();
  };
  Thread.Thread(my_write);

  while(!cb_data)
    Pike.DefaultBackend(0.005);

  return has_prefix("GET / HTTP/1.0\r\n\r\n", cb_data);
