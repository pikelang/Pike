test_do([[
  array(int) parse_fields(array(string) fields, int fno,
                          mapping(string:mapping|int) tab)
  {
    while (fno < sizeof(fields)) {
      int|mapping val = tab[fields[fno++] ];
      if (undefinedp(val))
      {
        if (val=tab["fallback"])
          return ({ val, fno-1 });
        break;
      }
      if (intp(val)) return ({ val, fno });
      tab = val;
    }
    return ({ -1, fno });
  };
  add_constant("parse_fields", parse_fields);
]])

