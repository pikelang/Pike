// Stdio.FILE gets/ngets tests
test_equal([[
lambda()
{
   Stdio.write_file("testsuite.tmp","hej\nhopp\ngazonk");
   Stdio.FILE r=Stdio.FILE("testsuite.tmp","r");
   array v=({});
   while (string s=r->gets())
      v+=({s});
   return v;
}()
]],({"hej","hopp","gazonk"}))

test_any_equal([[
  Stdio.write_file("testsuite.tmp","hej\nhopp\ngazonk");
  Stdio.FILE r=Stdio.FILE("testsuite.tmp","r");
  array v=({});
  v+=({r->gets()});
  r->ungets("hipp");
  while (string s=r->gets())
     v+=({s});
  return v;
]],({"hej","hipp","hopp","gazonk"}))

test_any_equal([[
  Stdio.write_file("testsuite.tmp","hej\nhopp\ngazonk");
