test_any_equal([[
  Stdio.write_file("testsuite.tmp","hej\nhopp\ngazonk");
  Stdio.FILE r=Stdio.FILE("testsuite.tmp","r");
  array v=({});
  r->ungets("h\nh\nhi");
  v+=({r->getchar(),r->getchar(),r->getchar()});
  v+=({r->gets()});
  r->ungets("oj\noj");
  v+=({r->getchar()});
  while (string s=r->gets())
     v+=({s});
  return v;
]],({'h','\n','h',"",'o',"j","oj","hi","hej","hopp","gazonk"}))

