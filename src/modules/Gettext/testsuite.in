test_conv(p_cs_precedes)

test_true( intp(Gettext.LC_ALL) )
test_true( intp(Gettext.LC_COLLATE) )
test_true( intp(Gettext.LC_CTYPE) )
test_true( intp(Gettext.LC_MESSAGES) )
test_true( intp(Gettext.LC_MONETARY) )
