//! Properties:
//! int bits-per-sample
//! int colorspace (GdkColorspace)
//! int has-alpha
//! int height
//! int n-channels
//! object pixels
//! int rowstride
//! int width

%{
void pixel_data_free(guchar *pixels, gpointer data) {
  g_free(pixels);
}
%}

void create(string|mapping options)
//! Create a GDK2.Pixbuf object.  options is either a filename or a mapping
//! of options.  options can be:<br>
//! <table>
//! <tr><td>filename</td><td>name of file to load</td><tr>
//! <tr><td>bits</td><td>number of bits per sample</td></tr>
//! <tr><td>width</td><td>width of image</td></tr>
//! <tr><td>height</td><td>height of image</td></tr>
//! <tr><td>alpha</td><td>true if alpha channel</td></tr>
//! <tr><td>scale</td><td>true if use width and height as scale</td></tr>
//! <tr><td>preserve</td><td>true if preserve aspect ratio</td></tr>
//! <tr><td>xpm</td><td>if this key exists, then value is xpm data to create from</td></tr>
//! <tr><td>data</td><td>if this key exists, then value is pixel data<br>
//! The following is a list of valid keys if key data exists:<br>
//! <table>
//! <tr><td>colorspace</td><td>colorspace, default GDK2.COLORSPACE_RGB, currently ignored</td></tr>
//! <tr><td>rowstride</td><td>distance in bytes between row starts</td></tr>
//! </table>
//! </td></tr>
//!       
{
  GdkPixbuf *gp;
  GError *error=NULL;

  pgtk_verify_not_inited();
  pgtk_verify_setup();
  if (Pike_sp[-1].type==PIKE_T_STRING) {
    char *file;
    
    get_all_args("create",args,"%s",&file);
    gp=gdk_pixbuf_new_from_file(file,&error);
    if (gp==NULL)
      Pike_error("Unable to load file %s: %s\n",file,error->message);
  } else {
    struct mapping *m;
    struct svalue *sv;
    int bits=8,width=-2,height=-2,alpha;
    
    get_all_args("create",args,"%m",&m);
    if (m==NULL)
      SIMPLE_TOO_FEW_ARGS_ERROR("create",1);
    sv=low_mapping_string_lookup(m,_STR("file"));
    if (sv && sv->type==PIKE_T_STRING) {
      char *file;
#ifdef HAVE_GTK26
      int scale=0;
#endif
      
      file=STR0(sv->u.string);
      sv=low_mapping_string_lookup(m,_STR("width"));
      if (sv)
	width=PGTK_GETINT(sv);
      sv=low_mapping_string_lookup(m,_STR("height"));
      if (sv)
	height=PGTK_GETINT(sv);
#ifdef HAVE_GTK26
      sv=low_mapping_string_lookup(m,_STR("scale"));
      if (sv) {
	scale=PGTK_GETINT(sv);
	if (width==-2)
	  width=-1;
	if (height=-2)
	  height=-1;
	gp=gdk_pixbuf_new_from_file_at_scale(file,width,height,scale,&error);
      } else
#endif
#ifdef HAVE_GTK24
	if (width>-2 || height>-2) {
	  if (width==-2)
	    width=-1;
	  if (height==-2)
	    height=-1;
	  gp=gdk_pixbuf_new_from_file_at_size(file,width,height,&error);
	} else
#else
	  {
	    gp=gdk_pixbuf_new_from_file(file,&error);
	  }
#endif
      if (gp==NULL)
	Pike_error("Unable to load file %s: %s\n",file,error->message);
    } else {
      sv=low_mapping_string_lookup(m,_STR("xpm"));
      if (sv) {
	if (sv->type==PIKE_T_ARRAY) {
	  const gchar **data;
	  int i,j;
	  struct array *a;
	  
	  a=sv->u.array;
	  if (a->size<1)
	    Pike_error("Invalid xpm data");
	  data=g_malloc(sizeof(gchar *)*a->size);
	  if (data==NULL)
	    SIMPLE_OUT_OF_MEMORY_ERROR("create",sizeof(gchar *)*a->size);
	  for (i=j=0; i<a->size; i++) {
	    if ((ITEM(a)+i)->type!=PIKE_T_STRING)
	      continue;
	    data[j++]=STR0((ITEM(a)+i)->u.string);
	  }
	  gp=gdk_pixbuf_new_from_xpm_data(data);
	  g_free(data);
        } else {
	  SIMPLE_ARG_ERROR("create",args,"Invalid xpm data");
        }
      } else {
	struct svalue *rowdata;
	guchar *pixel_data;
	
	sv=low_mapping_string_lookup(m,_STR("alpha"));
	if (sv && sv->type==PIKE_T_INT)
	  alpha=PGTK_GETINT(sv);
	sv=low_mapping_string_lookup(m,_STR("bits"));
	if (sv && sv->type==PIKE_T_INT)
	  bits=PGTK_GETINT(sv);
	sv=low_mapping_string_lookup(m,_STR("width"));
	if (sv && sv->type==PIKE_T_INT)
	  width=PGTK_GETINT(sv);
	sv=low_mapping_string_lookup(m,_STR("height"));
	if (sv && sv->type==PIKE_T_INT)
	  height=PGTK_GETINT(sv);
	
	rowdata=low_mapping_string_lookup(m,_STR("data"));
	if (rowdata && rowdata->type==PIKE_T_STRING) {
	  int stride;
	  
	  sv=low_mapping_string_lookup(m,_STR("rowstride"));
	  stride=PGTK_GETINT(sv);
	  if (sv==NULL)
	    SIMPLE_ARG_ERROR("create",args,"rowstride must exist and be non-zero");
	  pixel_data=g_malloc(height*stride+width+1);
	  if (pixel_data==NULL)
	    SIMPLE_OUT_OF_MEMORY_ERROR("create",height*stride+width+1);
	  memcpy(pixel_data,STR0(rowdata->u.string),rowdata->u.string->len);
	  gp=gdk_pixbuf_new_from_data(pixel_data,GDK_COLORSPACE_RGB,
				      alpha,bits,width,height,stride,pixel_data_free,NULL);
        } else {
	  gp=gdk_pixbuf_new(GDK_COLORSPACE_RGB,alpha,bits,width,height);
	}
      }
    }
  }
  if (gp==NULL)
    Pike_error("Unable to create pixbuf");
  THIS->obj=G_OBJECT(gp);
  pgtk__init_this_object();
}

