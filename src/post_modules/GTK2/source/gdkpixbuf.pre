		 &offset_y,&scale_x,&scale_y,&type,&overall_alpha,&check_x,
		 &check_y,&check_size,&color1,&color2);
    dest=GDK_PIXBUF(get_gobject(o1));
    gdk_pixbuf_composite_color(GDK_PIXBUF(THIS->obj),dest,dest_x,dest_y,
