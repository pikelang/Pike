		(GtkTextIter *)get_pgobject(o1,pgtk_text_iter_program),
		(GtkTextIter *)get_pgobject(o2,pgtk_text_iter_program),inc);
    my_pop_n_elems(args);
    PGTK_PUSH_GCHAR(s);
