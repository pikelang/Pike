    struct object *o1;
    const gchar *text;
    INT_TYPE len;
    get_all_args("insert",args,"%o%s%i",&o1,&text,&len);
    gtk_text_buffer_insert(GTK_TEXT_BUFFER(THIS->obj),
	(GtkTextIter *)get_pgobject(o1,pgtk_text_iter_program),text,len);
  }
  RETURN_THIS();
}

