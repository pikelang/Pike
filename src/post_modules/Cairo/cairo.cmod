                    (attributes? (const char *)STR0(attributes) : NULL));
    if (attributes)
      pop_stack();
    pop_stack();
    check_status(cairo_status(THIS->cr));
    RETURN;
  }

  /*! @decl void tag_end(string tag_name)
   *!
   *! Marks the end of the @[tag_name] structure.
