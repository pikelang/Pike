    get_all_args;
  {
    cairo_text_extents_t extents;
    const char *utf8;
    f_string_to_utf8(1);
    text = Pike_sp[-1].u.string;
    utf8 = (const char *)STR0(text);
    cairo_scaled_font_text_extents(THIS->scaled_font, utf8, &extents);
